<% if line_item == @current_item %>
  <tr class="line-item-highlight">
<% else %>
<tr>
<% end %>
  <td class="quantity text-right"><%= line_item.quantity %></td>
  <td>&times;</td>
  <td class="pr-2">
    <%= line_item.product.title %>
  </td>
  <td class="text-right font-bold">
    <%= number_to_currency(line_item.total_price) %>
  </td>
  <td>
    <%= button_to "Decrement items", decrement_line_item_path(line_item.id), method: "post",
      class: 'ml-4 rounded py-1 px-2 text-white bg-green-600'
     %>
  </td>
</tr>
