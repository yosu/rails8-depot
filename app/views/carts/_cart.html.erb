<div id="<%= dom_id cart %>" class="w-full sm:w-auto my-5 space-y-5">
  <h2 class="font-bold text-lg mb-3">Your Cart</h2>

  <table class="table-auto">
    <%= render cart.line_items %>

    <tfoot>
      <tr>
        <th class="text-right pr-2 pt-2">Total:</th>
        <td class="text-right pt-2 font-bold border-b-2 border-black">
          <%= number_to_currency(cart.total_price) %>
        </td>
      </tr>
    </tfoot>

  </table>
  <div class="flex mt-1">
    <%= button_to "Empty Cart", cart, method: :delete,
      class: 'ml-4 rounded py-1 px-2 text-white bg-green-600 cursor-pointer'
     %>

    <%= button_to "Checkout", new_order_path, method: :get,
      class: ["ml-4 rounded py-1 px-2 text-black",
        {"bg-green-200 cursor-pointer": @order.nil?},
        {"bg-gray-200 text-gray-600": (not @order.nil?)} ],
      disabled: (not @order.nil?)
     %>
  </div>
</div>

